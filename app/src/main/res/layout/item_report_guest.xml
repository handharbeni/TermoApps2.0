<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:elevation="4dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/guestImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:layout_marginRight="5dp"
            android:layout_marginBottom="4dp"
            android:padding="6dp"
            app:cardCornerRadius="8dp"
            android:background="#33000000"
            app:cardPreventCornerOverlap="false"
            app:layout_constraintBottom_toTopOf="@id/guestName"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/guestDate"
                android:padding="4dp"
                android:background="#33000000"
                android:text="TEST DATE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_margin="4dp"
            android:id="@+id/guestName"
            app:layout_constraintTop_toBottomOf="@+id/guestImage"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Name: TEST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="4dp"
            android:id="@+id/guestSuhu"
            app:layout_constraintTop_toBottomOf="@id/guestName"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Suhu: TEST"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="4dp"
            android:id="@+id/guestTujuan"
            app:layout_constraintTop_toBottomOf="@id/guestSuhu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Tujuan: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
